@code {
    // –º–µ—Ç–æ–¥—ã –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å –¥–∞–Ω–Ω—ã–º–∏, —Å–æ—Å—Ç–æ—è–Ω–∏–µ–º —Å—Ç—Ä–∞–Ω–∏—Ü—ã –∏ —Å–æ–∑–¥–∞–Ω–∏—è –æ–±–ª–∞–∫–∞ —Å–ª–æ–≤
    private List<AnalysisResult> _allReports = new();
    private IEnumerable<IGrouping<string, AnalysisResult>> _groupedReports = new List<IGrouping<string, AnalysisResult>>();
    
    private AnalysisResult? _selectedReport;
    private bool _isLoading = false;
    private string _errorMessage = "";
    private string _searchQuery = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadAll();
    }

    private async Task Enter(KeyboardEventArgs e)
    {
        if (e.Code == "Enter" || e.Code == "NumpadEnter")
        {
            await SearchWorks();
        }
    }

    private async Task SearchWorks()
    {
        if (string.IsNullOrWhiteSpace(_searchQuery))
        {
            await LoadAll();
            return;
        }
        _isLoading = true;
        _errorMessage = "";
        try
        {
            var encodedWorkId = Uri.EscapeDataString(_searchQuery);
            _allReports = await Http.GetFromJsonAsync<List<AnalysisResult>>($"/api/reports/works/{encodedWorkId}/reports") ?? new();
            GroupData();
        }
        catch (HttpRequestException ex)
        {
            HandleError(ex);
            _allReports.Clear();
            GroupData();
        }
        catch (Exception ex)
        {
            _errorMessage = "–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ —Å–µ—Ä–≤–µ—Ä—É.";
            Console.WriteLine(ex);
            _allReports.Clear();
            GroupData();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadAll()
    {
        _searchQuery = ""; 
        _isLoading = true;
        _errorMessage = "";
        
        try
        {
            _allReports = await Http.GetFromJsonAsync<List<AnalysisResult>>("/api/Reports") ?? new();
            GroupData();
        }
        catch (HttpRequestException ex)
        {
            HandleError(ex);
            _groupedReports = new List<IGrouping<string, AnalysisResult>>();
        }
        catch (Exception ex)
        {
            _errorMessage = "–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ, –∑–∞–ø—É—â–µ–Ω –ª–∏ Gateway.";
            Console.WriteLine(ex);
        }
        finally
        {
            _isLoading = false;
        }
    }
    
    private void HandleError(HttpRequestException ex)
    {
        if (ex.StatusCode == System.Net.HttpStatusCode.ServiceUnavailable)
        {
            _errorMessage = "–°–µ—Ä–≤–∏—Å –∞–Ω–∞–ª–∏–∑–∞ –≤—Ä–µ–º–µ–Ω–Ω–æ –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω (503). –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ.";
        }
        else if (ex.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            _errorMessage = "–î–∞–Ω–Ω—ã–µ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã.";
        }
        else
        {
            _errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –¥–∞–Ω–Ω—ã–µ. –ö–æ–¥: {ex.StatusCode}";
        }
    }

    private void GroupData()
    {
        _groupedReports = _allReports
            .GroupBy(r => string.IsNullOrEmpty(r.AssignmentName) ? "–ë–µ–∑ –Ω–∞–∑–≤–∞–Ω–∏—è" : r.AssignmentName)
            .OrderBy(g => g.Key);
    }

    private string GetRainbowCloudUrl(List<string> words)
    {
        var text = Uri.EscapeDataString(string.Join(" ", words));
        var rainbowColors = "[\"#ff0000\",\"#ff7f00\",\"#d4af37\",\"#008000\",\"#0000ff\",\"#4b0082\",\"#9400d3\"]";
        var encodedColors = Uri.EscapeDataString(rainbowColors);

        return $"https://quickchart.io/wordcloud?text={text}&colors={encodedColors}";
    }

    private void ShowDetails(AnalysisResult report)
    {
        _selectedReport = report;
    }

    private string GetColor(bool isPlag) => isPlag ? "bg-danger" : "bg-success";
}